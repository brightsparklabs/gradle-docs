# Site settings

title: {{ config.website.title|default("Documentation") }}
email: {{ config.website.email|default('') }}
description: >- # this means to ignore newlines until "baseurl:"
  {{ config.website.description|default(sys.project_description)|default("Documentation for "+ sys.project_name) }}
baseurl: {{ config.website.baseurl|default('') }} # the subpath of your site, e.g. /blog
url: {{ config.website.url|default('') }} # the base hostname & protocol for your site, e.g. http://example.com

# Build settings
theme: {{ config.website.theme|default("just-the-docs") }}
  #plugins:
  #  - jekyll-feed

asciidoctor:
  # To use asciidoctor-diagram file, `base_dir` and `safe` as per the below. For detail see:
  # * https://github.com/asciidoctor/jekyll-asciidoc#generated-image-location
  base_dir: :docdir
  safe: unsafe

  attributes:
    # Syntax highlighting in code blocks.
    source-highlighter: pygments
    # Add a gray box around code listings.
    pygments-css: style
    imagesdir: /images

# Do not delete images generated by asciidoctor-diagram stored in the images/ dir.
keep_files:
  - images


